{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    "target": "ES2021",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "importHelpers": false,
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "serialize.ts",
    "query.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}